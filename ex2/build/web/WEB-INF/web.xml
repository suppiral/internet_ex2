<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <welcome-file-list>
        <welcome-file>LoginServlet</welcome-file>
    </welcome-file-list>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>ex2.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MainServlet</servlet-name>
        <servlet-class>ex2.MainServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SearchServlet</servlet-name>
        <servlet-class>ex2.SearchServlet</servlet-class>
        <init-param>
            <description>the url</description>
            <param-name>url</param-name>
            <param-value>jdbc:mysql://localhost:3306/</param-value>
        </init-param>
        <init-param>
            <description>the dbname</description>
            <param-name>dbname</param-name>
            <param-value>ex2</param-value>
        </init-param>
        <init-param>
            <description>the driver name</description>
            <param-name>driver</param-name>
            <param-value>com.mysql.jdbc.Driver</param-value>
        </init-param>
        <init-param>
            <description>the username</description>
            <param-name>username</param-name>
            <param-value>root</param-value>
        </init-param>
        <init-param>
            <description>the password</description>
            <param-name>password</param-name>
            <param-value/>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>AddServlet</servlet-name>
        <servlet-class>ex2.AddServlet</servlet-class>
        <init-param>
            <description>the url</description>
            <param-name>url</param-name>
            <param-value>jdbc:mysql://localhost:3306/</param-value>
        </init-param>
        <init-param>
            <description>the dbname</description>
            <param-name>dbname</param-name>
            <param-value>ex2</param-value>
        </init-param>
        <init-param>
            <description>the driver name</description>
            <param-name>driver</param-name>
            <param-value>com.mysql.jdbc.Driver</param-value>
        </init-param>
        <init-param>
            <description>the username</description>
            <param-name>username</param-name>
            <param-value>root</param-value>
        </init-param>
        <init-param>
            <description>the password</description>
            <param-name>password</param-name>
            <param-value/>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>ex2.LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MyServlet</servlet-name>
        <servlet-class>ex2.MyServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MainServlet</servlet-name>
        <url-pattern>/MainServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SearchServlet</servlet-name>
        <url-pattern>/SearchServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/LogoutServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MyServlet</servlet-name>
        <url-pattern>/MyServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddServlet</servlet-name>
        <url-pattern>/AddServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
